# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=https://api.betthink.com
AUTH0_ISSUER=https://your-tenant.us.auth0.com/

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:password@localhost:5432/betthink?schema=public
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS_ENABLED=false

# Odds Providers
UNABATED_API_KEY=your_unabated_api_key
UNABATED_BASE_URL=https://api.unabated.com/v1
THE_ODDS_API_KEY=your_odds_api_key
THE_ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PREMIUM_MAX_REQUESTS=500

# Caching
ODDS_CACHE_TTL_SECONDS=30
EVENTS_CACHE_TTL_SECONDS=120

# BullMQ Queue Configuration
ODDS_REFRESH_INTERVAL_MINUTES=3
ODDS_URGENT_REFRESH_INTERVAL_MINUTES=1

# OpenTelemetry & Observability
OTEL_ENABLED=false
OTEL_SERVICE_NAME=bt-api
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Logging
LOG_LEVEL=info
LOG_PRETTY_PRINT=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:19006
CORS_CREDENTIALS=true

# Feature Flags
FEATURE_ODDS_AGGREGATION=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_ANALYTICS_QUEUE=true

# Security
IDEMPOTENCY_KEY_TTL_HOURS=24
JWT_CACHE_TTL_SECONDS=3600
