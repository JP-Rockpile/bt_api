# ============================================================================
# BET THINK API - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=v1

# ============================================================================
# DATABASE - PostgreSQL (Render)
# ============================================================================
# Replace with your Render PostgreSQL Internal or External Database URL
DATABASE_URL=postgresql://betthink_user:REPLACE_WITH_PASSWORD@dpg-XXXXX.oregon-postgres.render.com/betthink_db
DATABASE_POOL_SIZE=10

# ============================================================================
# REDIS - Cache and Queue (Render)
# ============================================================================
# Replace with your Render Redis connection details
REDIS_HOST=red-XXXXX.oregon-redis.render.com
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_IF_PASSWORD_SET
REDIS_DB=0
REDIS_TLS_ENABLED=false

# ============================================================================
# AUTH0 - Authentication
# ============================================================================
AUTH0_DOMAIN=your-tenant.us.auth0.com
AUTH0_AUDIENCE=https://api.betthink.com
AUTH0_ISSUER=https://your-tenant.us.auth0.com/

# ============================================================================
# ODDS PROVIDERS - API Keys
# ============================================================================
UNABATED_API_KEY=your_unabated_api_key_here
UNABATED_BASE_URL=https://api.unabated.com/v1
THE_ODDS_API_KEY=your_the_odds_api_key_here
THE_ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# ============================================================================
# EXPO - Push Notifications
# ============================================================================
EXPO_ACCESS_TOKEN=

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_PREMIUM_MAX_REQUESTS=500

# ============================================================================
# CACHING
# ============================================================================
ODDS_CACHE_TTL_SECONDS=30
EVENTS_CACHE_TTL_SECONDS=120

# ============================================================================
# BACKGROUND QUEUES
# ============================================================================
ODDS_REFRESH_INTERVAL_MINUTES=3
ODDS_URGENT_REFRESH_INTERVAL_MINUTES=1

# ============================================================================
# OBSERVABILITY
# ============================================================================
OTEL_ENABLED=false
OTEL_SERVICE_NAME=bt-api
JAEGER_ENDPOINT=http://localhost:4318/v1/traces
LOG_LEVEL=info
LOG_PRETTY_PRINT=true

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=http://localhost:19006
CORS_CREDENTIALS=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_ODDS_AGGREGATION=true
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_ANALYTICS_QUEUE=true

# ============================================================================
# SECURITY
# ============================================================================
IDEMPOTENCY_KEY_TTL_HOURS=24
JWT_CACHE_TTL_SECONDS=3600
